<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">

    <item
        android:width="50dp"
        android:height="24dp"
        android:right="0dp">
        <rotate android:fromDegrees="90">
            <shape>
                <solid android:color="@color/colorAccent" />
                <corners
                    android:bottomRightRadius="2dp"
                    android:topRightRadius="2dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="17dp"
        android:height="17dp"
        android:bottom="0dp"
        android:left="0dp"
        android:start="20dp"
        android:top="-13dp">
        <rotate android:fromDegrees="90">
            <rotate
                android:fromDegrees="45"
                android:pivotX="0"
                android:pivotY="0">
                <shape>
                    <solid android:color="@color/colorAccent" />
                </shape>
            </rotate>
        </rotate>
    </item>

</layer-list>